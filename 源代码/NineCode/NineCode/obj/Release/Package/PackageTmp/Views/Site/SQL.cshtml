@{
    ViewBag.Title = ViewBag.PanleTitle = "SQL语句执行";
}
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-1 hidden-xs"></div>
            <div class="col-sm-10 col-xs-12">
                <form>
                    <br />
                    <div class="form-group">
                        <label class="h4" for="exampleInputEmail1">SQL语句：</label>
                        <textarea class="form-control" placeholder="在此输入SQL语句..." rows="15" id="sql"></textarea>
                    </div>
                    @Html.Partial("/Views/Shared/ShowTip.cshtml")
                    <button type="button" class="btn btn-primary" style="resize: both;" id="exec">执行SQL</button>
                    &nbsp;
                    <button type="reset" class="btn btn-danger">清空输入</button>
                </form>
                <br />
            </div>
            <div class="col-sm-1 hidden-xs"></div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#WebAdminChlid").addClass("in");
        $("#UseSql").addClass("active");
        showTip("false", "该操作有一定风险，请谨慎操作！");
    });
    $("#exec").click(function () {
        var sc = {
            CfgServer: $("#sql").val()
        };
        $.post("/Site/ExeSql", sc, function (data) {
            showTip(data["res"], data["msg"]);
        });
    });
</script>
